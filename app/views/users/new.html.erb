<%= form_for @user , html: {id: 'login-form', class: 'form-signin'} do |f| %>
  <h1 class="h3 mb-3 font-weight-normal text-center">Sign in</h1>
  
  <%= f.label :name, 'Name', class: 'sr-only', 'for' => 'inputName' %>
  <%= f.text_field :name, id: 'inputName', class: 'form-control', placeholder: 'Name'%>
  
  
  <%= f.label :email, 'Email', class: 'sr-only', 'for' => 'inputEmail'  %>
  <%= f.text_field :email, id: 'inputEmail', class: 'form-control', placeholder: 'Email'  %>

  <%= f.label :password, 'Password', class: 'sr-only', 'for' => 'inputPassword' %>
  <%= f.password_field :password, id: 'inputPassword', class: 'form-control', placeholder: 'Password'%>
  
  <%= f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block' %>
<% end %>
